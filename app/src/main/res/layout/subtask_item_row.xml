<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_subtask"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="8sp"
            android:paddingRight="8sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sub Task Header"
                android:id="@+id/tv_subtask_header"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Task Description"
                android:id="@+id/tv_subtask_despcription"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_below="@+id/tv_subtask_header"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tv_subtask_id"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/half_black"></LinearLayout>
        -->

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>
